Proceso ejercicio28
	// Variables
    Definir suma, i Como Entero
	
    // Inicializar la suma a 0
    suma <- 0
    i <- 1
	
    // Calcular la suma de los primeros cien números con un ciclo Repetir
    Repetir
        suma <- suma + i
        i <- i + 1
    Hasta Que i > 100
	
    // Mostrar resultado
    Escribir "La suma de los primeros cien números es: ", suma

FinProceso
